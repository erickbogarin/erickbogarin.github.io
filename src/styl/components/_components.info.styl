
//
// Informations Component
// --------------------------------------------------

.info-box
  clearfix()
  font-size rem(18px)
  line-height 1.5
  padding-top 60px
  padding-bottom 50px
  text-align center

.info-description
  +above('l')
    column(1/3)

  > .logo
    border 5px solid rgba(255,255,255,.3);
    border-radius 50%
    margin 0 auto
    max-width 50%
    padding 30px 0px

    +above('s')
      max-width 40%

    +above('m')
      padding 50px 0px

    +above('l')
      max-width 60%
      padding 40px 0px

    +above('xl')
      max-width 50%
      padding 50px 0px

  > .description
    +above('xl')
      padding 0 50px

.info-box .info-description
  &:first-child
    .logo
      background-color $logo-carrear-color
    .fa-icon
      fill aliceblue

  &:nth-child(2)
    .logo
      background-color $logo-lab-color
    .fa-icon
      fill aliceblue

  &:last-child
    .logo
      background-color $logo-blog-color
    .fa-icon
      fill aliceblue
