/** @component menu-nav */

.site-nav
  background-color $menu-background
  color $menu-color
  cursor auto
  position fixed
  top 0
  right 0
  width 100%
  height 100vh
  transform: translate3d(100%, 0, 0);
  transition: .3s ease;
  z-index: 3;

  +above('m')
    width 55%

  +above('l')
    width 40%

  +desktop()
    width 25%

  &.is-visible
    transform: translate3d(0%, 0, 0);

  > .header, .menu
    padding 1rem 0 1rem 1rem

    +above('s')
      padding .75rem 0 .5rem .75rem

  > .profile
    border-top 1px solid #9e9e9e
    border-bottom 1px solid #9e9e9e

.user-social
  .icon
    height 40px

.dev-info
  text-align center

  > .image
    border: 5px solid rgba(255,255,255,0.1);
    border-radius .4rem
    box-sizing border-box
    margin-top 1rem
    width 100%
    max-width 150px

  > .description
    padding 0 rem(20px)

.page-item
  list-style-type none
  padding .75rem 0

  > .icon
    height 30px
    vertical-align middle
  > .link
    font-weight 800
    margin-left rem(25px)
    letter-spacing rem(2px)
    vertical-align middle
