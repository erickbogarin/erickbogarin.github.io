/** @component menu-nav */

.site-nav
  cursor auto

  position fixed
  top 0
  right 0

  width 100%
  height 100%

  transform: translate3d(120%, 0, 0);
  transition: .3s ease;

  z-index: 3;

  +tablet()
    width 40%

  +desktop()
    width 20%

  &.is-visible
    transform: translate3d(0%, 0, 0);

  > .title
    margin-left 10px
    +above('s')
      text-align center
      margin-left 0

  > .close
    cursor pointer
    position fixed
    top 15px
    right 20px

    +above('s')
      top 10px
      left -45px
