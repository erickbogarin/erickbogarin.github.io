/** @component search-form */

.search-dialog
  box-sizing border-box
  color $gray-lighter

  margin-top 20px
  width 80%

  z-index 3

  +mobile()
    margin-top 80px

  // Input text
  > .field
    background-color transparent
    border 0
    border-bottom 1px solid #fff
    border-radius 0
    background-clip padding-box
    color $white
    margin-top rem(5px)

    &:focus
      outline 0
      box-shadow none

  > .close, .label
    position absolute
    top -40px

  > .close
    right 0

  > .label
    font-size 25px
    left: 0

// result area
.search-list
  li
    list-style none
