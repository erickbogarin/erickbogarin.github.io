/** @component search-form */

.search-dialog
  background-color $white
  box-sizing border-box
  color $black
  position fixed
  top 0
  left 0
  height: 100vh
  width 100%
  transform: translate3d(100%, 0, 0);
  transition: .3s ease;
  z-index 3

// result area
.search-list
  color #FF5252

  li
    list-style none

.search-header
  align-items flex-start
  display flex
  margin-top rem(40px)
  justify-content space-between

  .close
    fill lighten($black, 20)
    &:hover
      fill lighten($black, 50)

.search-form
  flex-grow 2
  max-width 75%

  // Input text
  > .field
    border 0
    border-bottom 2px solid $black
    border-radius 0
    background-clip padding-box
    margin-top rem(20px)
    padding-bottom rem(15px)

    &:focus
      outline 0

  > .label
    font-size rem(65px)

.search-dialog[data-state="is-visible"]
  transform: translate3d(0%, 0, 0);
