/** @component header */

.header-box
  border-bottom: 1px solid #E6EAEA;
  background-color $white

  display flex
  align-items center
  justify-content space-between

  width 100%
  height 70px

.header-logo
  > .title
    color $title-color
    font-size rem(41px)
    font-weight 700
    letter-spacing -1px

  > .title:before
    content $site-title-small

    +above('m')
      content $site-title
