// @component post

.post-area
  background-color $white
  font-size rem(18px)
  letter-spacing 0.01rem
  line-height 2
  mainFont(300)
  word-wrap: break-word;

  +above(cut)
    font-size rem(20px)

.header-post
  font-weight 900
  padding 80px 0

.post-content
  color #333

  & img
    display block
    max-width 100%
    margin 1.875rem auto

  & li
    margin-left: rem(25px);

  a
    color $link-color
    &:hover
      color $link-hover-color
      text-decoration $link-hover-decoration

  .externalLink:after
    background-size 100%
    background-image url('../../assets/img/icons/share.svg')
    content ''
    color $link-color
    display inline-block
    margin-left rem(5px)
    width rem(22px)
    height rem(22px)

