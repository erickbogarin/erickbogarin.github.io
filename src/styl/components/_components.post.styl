// @component post

.post-area
  background-color $white
  font-size rem(18px)
  letter-spacing 0.01rem
  line-height 2
  mainFont(300)
  word-wrap: break-word;

  +above(cut)
    font-size rem(20px)

.header-post
  font-weight 900
  padding 80px 0

.post-content
  color #333

  & img
    display block
    max-width 100%
    margin 1.875rem auto

  & li
    margin-left: rem(25px);
