// Base class
//
// styling for bare HTML elements
// These come with default styling from the browser so we can redefine them here

html
  height 100%

body
  background-color $body-bg
  color #555
  font-family 'Open Sans',sans-serif
  font-weight 300

  min-height 100%
  display flex
  flex-direction column

  overflow-x hidden

main
  flex 1
  margin-top 70px

body, ul
  margin 0
  padding 0

a
  text-decoration none
  color inherit

  &:visited
    color inherit

blockquote
  padding 1px 22px
  margin 0 0 22px
  font-size rem(20px)
  border-left 5px solid #16a085

/* Typography
–––––––––––––––––––––––––––––––––––––––––––––––––– */
h1, h2, h3, h4, h5, h6
  font-family 'Montserrat', sans-serif
  font-weight 300

h3
  font-size rem(28px)

h5
  font-size rem(16px)

/* Misc
–––––––––––––––––––––––––––––––––––––––––––––––––– */
hr
  border-width 0
  border-top 1px solid #E1E1E1
